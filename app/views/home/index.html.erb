<div class="row">
	<div class="col-md-7" id="original_content">
		<div class="panel panel-default">
			<textarea class="form-control" placeholder="Put your original text here" rows="20" id="original_text_area"></textarea>
			<div class="panel-footer">
				<div class="row">
					<div class="col-md-9">
						<span class="badge" id="original_word_count">0</span> words, <span class="badge" id="original_character_count">0</span> characters
					</div>
					<div class="col-md-3 text-right"><button class="btn btn-primary" id="generate_summary_button">Generate summary</button></div>
				</div>

			</div>
		</div>
	</div>
	<div class="col-md-5" id="summary_content">
		<div class="panel panel-default">
			<div class="panel-heading">Summary</div>
			<div class="panel-body">
				<div id="summary_text"></div>
				<div id="progress_bar" class="progress">
					<div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
    				Summary is being generated, please wait...
  				</div>
				</div>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title">Summary details</h3></div>
			<div class="list-group">
				<a class="list-group-item">
					Words
					<span class="badge" id="word_count">0</span>
				</a>
				<a class="list-group-item">
					Characters
					<span class="badge" id="character_count">0</span>
				</a>
				<a class="list-group-item">
					Sentences
					<span class="badge" id="sentence_count">0</span>
				</a>
			</div>
		</div>

	</div>
</div>